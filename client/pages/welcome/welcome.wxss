/* pages/welcome/welcome.wxss */
page{
    height: 100%;
    background-color: #8fbc8f;
}
.container{
    display: flex;   /*这是弹性盒子模型*/
    flex-direction: column;
    align-items: center;
}
.user-avator{
    width: 200rpx;
    height: 200rpx;
    border-radius: 100rpx;
    margin-top: 160rpx;
    margin: auto 0;
}
.user-name{
    font-family: "Microsoft YaHei UI";
    font-weight: bold;
    margin-top: 100rpx;      /*1px = 2rpx*/
}
.moto-container{
    border-radius: 10rpx;
    border: 1px solid #405f80;
    text-align: center;
    margin-top: 200rpx;
    height: 80rpx;
    width: 200rpx;
}
.moto{
    color: #405f80;
    font-size: 22rpx;
    line-height: 80rpx;   /*行高80，达到垂直居中父容器的效果*/
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 