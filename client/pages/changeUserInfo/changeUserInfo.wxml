
<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="myicon">
    <image bindtap="modifymyicon" src="{{avatorUrl}}"></image>
  </view>

  <view class="inputs">
    <view class="title">昵称</view>
    <view>
      <input bindinput="nickname"name="nickname" value="{{nickname}}" disabled="{{bin}}" focus="{{focus}}" />
    </view>
  </view>
  <view class="hr"></view>

