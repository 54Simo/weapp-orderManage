  <view class="inputs">
    <view class="title">微信号</view>
    <view>
      <input bindinput="openid" value="{{openid}}" disabled="{{bin}}" focus="{{focus}}" />
    </view>
  </view>
  <view class="hr"></view>


  <view class="inputs">
    <view class="title">真实姓名</view>
    <view>
      <input bindinput="fullname" value="{{fullname}}" disabled="{{bin}}" focus="{{focus}}" />
    </view>
  </view>
  <view class="hr"></view>


  <view class="inputs">
    <view class="title">手机号</view>
    <view>
      <input bindinput="phone" value="{{phone}}" disabled="{{bin}}" focus="{{focus}}" />
    </view>
  </view>
  <view class="hr"></view>


  <view class="inputs">
    <view class="title">员工id</view>
    <view>
      <input bindinput="id" value="{{id}}" disabled="{{bin}}" focus="{{focus}}" />
    </view>
  </view>
  <view class="hr"></view>

  <button class="button" bindtap="setbin">修改资料</button>
  <button class="button" formType="submit" bindtap="ctrls" hidden="{{hidden}}">保存</button>
 <button class="button" formType="reset"  hidden="{{hidden}}">重置</button>
</form>